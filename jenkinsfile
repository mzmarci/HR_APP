pipeline {
    agent any
    
    environment {
        myuser = credentials ('dockerhub-user')
        mypassword = credentials ('dockerhub-password')
        version = "v3"
    }
    
    stages {
       stage ("download code") {
         steps {
            sh 'git clone https://github.com/mzmarci/HR_APP.git'
         }
       }
    
       stage ("build image") {
         steps {
            sh '''
                  cd HR_APP
                  docker build -t mzmarci/hrapp:$v3 .
               '''   
         }
       }
    
       stage ("publish image") {
         steps {
            sh '''
                  docker login -u $myuser -p $mypassword
                  docker push mzmarci/hrapp:$version
                '''
         }
       }       
    
       stage ("deploy app") {
         steps {
            sh '''
                 docker run --name hrapp  --rm -d -p 5000:5000 mzmarci/$version
               '''
         }
       }
    }

    post {
        always {
            deleteDir()
        }
    }
}