global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'prometheus'
    scrape_interval: 5s
    static_configs:
      - targets: ['localhost:9090']
      
  - job_name: 'node_exporter'
    scrape_interval: 5s
    static_configs:
      - targets: ['3.253.49.180:9100']

  - job_name: 'hrapp'
    scrape_interval: 5s
    static_configs:
      - targets: ['34.253.210.49:9100']
      - targets: ['3.254.139.231:9100']

rule_files:
  - alert.rules.yml

alerting:
  alertmanagers:
  - static_configs:
    - targets: ['localhost:9093']